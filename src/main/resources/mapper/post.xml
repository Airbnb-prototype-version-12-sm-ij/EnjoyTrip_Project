<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.domain.posting.mapper.PostingMapper">

    <!-- 게시글 조회 (전체) -->
    <select id="getPostList">
        SELECT *
        FROM posts
    </select>

    <!-- 게시글 조회 (특정) -->
    <select id="getPost">
        SELECT *
        FROM posts
        WHERE post_id = #{postId}
    </select>

    <!-- 게시글 등록 -->
    <insert id="registPost">
        INSERT INTO posts (title, content, sido_code, gugun_code)
        VALUES (#{title}, #{content}, #{sidoCode}, #{gugunCode})
    </insert>

    <!-- 게시글 수정 -->
    <update id="modifyPost">
        UPDATE posts
        SET title      = #{title},
            content    = #{content},
            sido_code  = #{sidoCode},
            gugun_code = #{gugunCode}
        WHERE post_id = #{postId}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deletePost">
        DELETE
        FROM posts
        WHERE post_id = #{postId}
    </delete>

    <!-- 댓글 등록 -->
    <insert id="registComment">
        INSERT INTO comments (post_id, user_id, comment)
        VALUES (#{postId}, #{userId}, #{comment})
    </insert>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment">
        DELETE
        FROM comments
        WHERE id = #{commentId}
    </delete>

</mapper>